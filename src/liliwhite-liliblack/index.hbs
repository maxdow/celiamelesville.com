  <style>
    .preorder {
      color: #7a6aa5;
      background: #dedce4;
      border-radius: 10px;
      font-size: 2em;
      text-align: center;
      padding: 1em;
      margin: 1em;
      transition: all ease 0.2s;
    }

    .preorder:hover {
      background: rgba(167, 160, 186, 0.7);
      color: #fdfcff;
    }


    .progress-bar {
      -moz-box-shadow: 0 1px 0px #fcfcfc inset, 0 1px 0 #bebbb9;
      -webkit-box-shadow: 0 1px 0px #fcfcfc inset, 0 1px 0 #bebbb9;
      box-shadow: 0 1px 0px #fcfcfc inset, 0 1px 0 #bebbb9;
      background: #f1f6fa;
      border-radius: 10px;
      box-shadow: inset 0 0 0 1px #ccd6dd;
      height: 2em;
      overflow: hidden;
      position: relative;
      text-indent: 100%;
      width: 80%;
      margin: 0 auto;
    }

    .progress-bar--wrap {
      display: flex;
      font-size: 13px;
      font-weight: 500;
      line-height: 1;
      margin: 10px 0;
    }

    .progress-bar--inner {
      background-color: #1bcc37;
      transition: all .5s ease-in-out;
      border-radius: 10px;
      height: 2em;
      left: 0;
      min-height: 10px;
      position: absolute;
      top: 0;
    }

    img {
      max-width: 100%;
    }

    .text-fund {
      font-size: 1.2em;
      color: #7a6aa5;
      text-align: center;
      margin: 0;
      padding: 0
    }

    .big-text {
      font-size: 1.5em;
      text-align: center
    }

    .slightbox-container {
      text-align: center;
      display: flex
    }

    .slightbox-container img {
      margin: 1em 0.5em;
      display: block;
    }

    .text-contain {
      text-align: center;
      display: flex
    }

    @media screen and (max-width: 700px) {
      .text-contain {
        display: block
      }
    }
  </style>
