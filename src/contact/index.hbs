               <label for="name">Nom</label>
               <input type="text" name="name" size="20" maxlength="40" placeholder="Entrer votre nom">
             </div>
             <div class="form-group">
               <label for="email">Mail</label>
               <input type="email" data-required="false"  name="email" size="20" maxlength="40" placeholder="Entrer votre mail">
             </div>
             <div class="form-group">
               <label for="message">Message</label>
               <textarea name="message" rows="3" cols="40"></textarea>
             </div>
            <div class="form-group">
             <button type="submit" class="btn btn-primary">Envoyer</button>
            </div>

          </form>
        </div>
    </section>



  </div>

  </div>
